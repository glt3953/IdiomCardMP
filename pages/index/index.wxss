/* pages/index/index.wxss */
.header-stats {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
  margin: 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 28rpx;
  color: #666;
}

.learning-modes {
  margin: 20rpx;
}

.mode-title, .category-title, .rec-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.mode-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.mode-card:active {
  transform: scale(0.98);
  background-color: #f5f5f5;
}

.mode-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
}

.mode-content {
  flex: 1;
}

.mode-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.mode-desc {
  font-size: 28rpx;
  color: #666;
}

.mode-arrow {
  font-size: 32rpx;
  color: #ccc;
}

.categories {
  margin: 40rpx 20rpx 20rpx;
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.category-item {
  width: 48%;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.category-item:active {
  transform: scale(0.95);
}

.category-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.category-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.category-count {
  font-size: 24rpx;
  color: #666;
}

.recommendation {
  margin: 40rpx 20rpx 20rpx;
}

.rec-content {
  padding: 20rpx 0;
}

.rec-idiom {
  font-size: 40rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 10rpx;
}

.rec-pinyin {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.rec-meaning {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}