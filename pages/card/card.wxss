/* pages/card/card.wxss */
.nav-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
}

.nav-info {
  display: flex;
  flex-direction: column;
}

.nav-mode {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: 500;
}

.nav-progress {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

.nav-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  padding: 10rpx;
  margin-left: 20rpx;
}

.icon-collect, .icon-collected {
  font-size: 48rpx;
}

.idiom-card {
  margin: 30rpx 20rpx;
  min-height: 600rpx;
  position: relative;
}

.card-front, .card-back {
  display: flex;
  flex-direction: column;
  height: 100%;
  min-height: 600rpx;
}

.idiom-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 60rpx 40rpx;
}

.idiom-text {
  font-size: 72rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  letter-spacing: 8rpx;
}

.idiom-pinyin {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 40rpx;
  letter-spacing: 2rpx;
}

.idiom-difficulty {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.difficulty-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.difficulty-chuji {
  background: #52c41a;
}

.difficulty-zhongji {
  background: #faad14;
}

.difficulty-gaoji {
  background: #f5222d;
}

.category-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background: #f0f0f0;
  color: #666;
}

.back-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.back-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.back-close {
  font-size: 48rpx;
  color: #999;
  padding: 10rpx;
}

.meaning-content, .story-content {
  flex: 1;
  padding: 30rpx;
}

.meaning-text, .story-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
  margin-bottom: 30rpx;
}

.moral-text, .story-source {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
}

.moral-label, .source-label {
  font-weight: 500;
  color: #4A90E2;
}

.card-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.card-actions button {
  flex: 1;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx 40rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #4A90E2;
}

.nav-btn[disabled] {
  color: #ccc;
}

.nav-icon {
  font-size: 36rpx;
  margin-bottom: 5rpx;
}

.nav-text {
  font-size: 24rpx;
}

.center-actions {
  display: flex;
  gap: 40rpx;
}

.center-actions .action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 10rpx;
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 5rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

.completion-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  text-align: center;
  padding: 60rpx 40rpx;
}

.completion-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.completion-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.completion-stats {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.completion-actions {
  display: flex;
  gap: 20rpx;
}

.completion-actions button {
  flex: 1;
}