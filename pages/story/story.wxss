/* pages/story/story.wxss */
.story-header {
  text-align: center;
  padding: 40rpx 30rpx;
  margin: 20rpx;
}

.idiom-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
}

.idiom-pinyin {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
}

.idiom-tags {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.difficulty-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.difficulty-chuji {
  background: #52c41a;
}

.difficulty-zhongji {
  background: #faad14;
}

.difficulty-gaoji {
  background: #f5222d;
}

.category-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background: #f0f0f0;
  color: #666;
}

.meaning-section,
.story-section,
.source-section,
.moral-section {
  margin: 20rpx;
  padding: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.meaning-content,
.source-content,
.moral-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
}

.story-content {
  max-height: 600rpx;
}

.story-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  text-indent: 2em;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx 60rpx;
  margin-top: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border: 2rpx solid #4A90E2;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: #f5f5f5;
}

.collect-btn.collected {
  background: #4A90E2;
  color: white;
}

.btn-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #4A90E2;
}

.collect-btn.collected .btn-text {
  color: white;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .idiom-title {
    font-size: 48rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .action-btn {
    flex-direction: row;
    justify-content: center;
    min-width: auto;
    width: 100%;
  }
  
  .btn-icon {
    margin-bottom: 0;
    margin-right: 10rpx;
  }
}